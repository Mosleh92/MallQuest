# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=True
FLASK_DEBUG=1

# Database Configuration
DATABASE_URL=sqlite:///mall_gamification.db
DATABASE_PATH=mall_gamification.db

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=True
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
MFA_ENABLED=True
CSRF_ENABLED=True

# Performance Configuration
CACHE_TTL=300
MAX_CONNECTIONS=100
ASYNC_WORKERS=4
MEMORY_LIMIT_MB=512
PERFORMANCE_MONITORING=True

# Mall Configuration
MALL_NAME=Deerfields Mall
MALL_LOCATION=Abu Dhabi, UAE
SUPPORT_EMAIL=support@deerfields-mall.com
SUPPORT_PHONE=+971-XX-XXX-XXXX

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
SECURITY_LOG_FILE=logs/security.log
PERFORMANCE_LOG_FILE=logs/performance.log

# Development Configuration
TESTING=False
TEST_DATABASE_URL=sqlite:///test_mall_gamification.db
MOCK_REDIS=False

# Optional Features
ENABLE_3D_GRAPHICS=True
ENABLE_COMPANION_SYSTEM=True
ENABLE_EVENT_SYSTEM=True
ENABLE_SOCIAL_FEATURES=True
ENABLE_VIP_SYSTEM=True

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=100
API_TIMEOUT=30

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_ENABLED=False

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf
UPLOAD_FOLDER=uploads

# Session Configuration
SESSION_TYPE=filesystem
SESSION_FILE_DIR=flask_session
PERMANENT_SESSION_LIFETIME=3600

# Monitoring Configuration
ENABLE_METRICS=True
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30 